{
  "ConnectionStrings": {
    "Local": "Server=(localdb)\\MSSQLLocalDB;Integrated Security=True;Encrypt=false;Database=Synapxe.Fhir.ProfileValidator_DataDocument;Encrypt=false"
  },
  "FhirEngine": {
    "ShowExceptionDetails": true,
    "SystemPlugins": {
      "Swagger": {
        "RegisterMiddleware": true,
        "ExamplesJsonPath": "fhir-examples.json",
        "ExcludePaths": [ "/metadata" ],
        "ExcludeResources": [ "OperationDefinition", "StructureDefinition", "SearchParameter", "CodeSystem", "ValueSet" ],
        "ExcludeConditionalUpdatePath": true,
        "AuthenticationSchemes": {
          "Test": {
            "in": "Header",
            "name": "X-Ihis-SourceApplication",
            "type": "ApiKey",
            "example": "CCDP"
          }
        },
        "Headers": {
          "X-Ihis-CorrelationId": {
            "Description": "Correlation Id for the request",
            "Required": false,
            "Example": "abcd"
          },
          "Content-Type": {
            "Description": "Content type for the request",
            "Required": false,
            "Example": "application/fhir+json"
          }
        },
        "RenameTags": {
          "Appointment": "Patient Appointments"
        }
      },
      "HealthCheck": {
        "Detailed": true
      }
    },
    "Handlers": {
      "Repository": {
        "FhirDataStore<@NoSql>": {
          "UseSqlDocument": {
            "Migration": {
              "DeployDatabase": true,
              "CreateNewDatabase": true
            }
          }
        }
      },
      "Workflow": {
        "Appointment": {
          "PreCRUD": [
            {
              "Name": "ValidateNoAppointmentConflictOnCreate"
            }
          ]
        }
      }
    }
  }
}
